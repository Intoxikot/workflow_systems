  <SqlQueries>
    <SqlQuery Name="ClientSelectSqlQuery">
      <Text> 
        SELECT 
          client_id AS "ClientId", 
          title AS "Title", 
          city_id AS "CityId",
          branch_id AS "BranchId",
          address AS "Address"
        FROM 
          new_workflow.client 
        ORDER BY 
          client_id ASC 
      </Text>
    </SqlQuery>
    <SqlQuery Name="ClientInsertSqlQuery">
      <Text> 
        INSERT INTO new_workflow.client ( title, city_id, address ) 
        VALUES ( {Title}, {CityId}, {Address} )
      </Text>
    </SqlQuery>
    <SqlQuery Name="ClientUpdateSqlQuery">
      <Text> 
        UPDATE 
          new_workflow.client 
        SET 
          title = {Title}, 
          city_id = {CityId},
          branch_id = {BranchId}, 
          address = {Address}
        WHERE 
          client_id = {ClientId} 
      </Text>
    </SqlQuery>
    <SqlQuery Name="ClientDeleteSqlQuery">
      <Text> 
        DELETE FROM 
          new_workflow.client 
        WHERE 
          client_id = {ClientId} 
      </Text>
    </SqlQuery>
    <SqlQuery Name="CityInsertSqlQuery">
      <Text>
        INSERT INTO
          new_workflow.city (title)
        VALUES ( 
          {Title}
        )
      </Text>
    </SqlQuery>
    <SqlQuery Name="CitySelectSqlQuery">
      <Text>
        SELECT
      city_id AS "CityId",
          title AS "Title"
      FROM
        new_workflow.city
        ORDER BY
          city_id ASC
      </Text>
    </SqlQuery>
    <SqlQuery Name="BranchInsertSqlQuery">
      <Text> 
        INSERT INTO new_workflow.branch (title) 
        VALUES ( 
          {Title}
        )
      </Text>
    </SqlQuery>

    <SqlQuery Name="CityUpdateSqlQuery">
      <Text>
		UPDATE
		  new_workflow.city
		SET
		  title = {Title}
		WHERE
		  city_id = {CityId}
      </Text>
    </SqlQuery>
    <SqlQuery Name="CityDeleteSqlQuery">
      <Text>
		DELETE FROM
		  new_workflow.city
		WHERE
		  city_id = {CityId}
      </Text>
    </SqlQuery>

    <SqlQuery Name="BranchSelectSqlQuery">
      <Text>
        SELECT
	     branch_id AS "BranchId",
	     title AS "Title"
        FROM
          new_workflow.branch
        ORDER BY
          branch_id ASC
      </Text>
    </SqlQuery>
    <SqlQuery Name="BranchUpdateSqlQuery">
